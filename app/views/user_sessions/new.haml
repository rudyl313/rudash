.login_form
  %h1 Login
  = form_for @user_session, :url => {:action => "create"} do |f|
    - unless @user_session.errors.empty?
      %div
        %ul
          - @user_session.errors.to_a.each do |error|
            %li=error
    %div
      = f.label :username
      %br/
      = f.text_field :login
    %div
      = f.label :password
      %br/
      = f.password_field :password
    %div
      = f.submit "Login"
